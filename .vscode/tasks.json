{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Scrivomatic",
			"type": "shell",
			"options": {
				"cwd": "${fileDirname}"
			},
			"command": "scrivomatic",
			"args": [
				"-v",
				"-l",
				"${file}"
			],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		}
	]
}